{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        },
        {
            "src": "assets/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/assets/(.*)",
            "dest": "/assets/$1"
        },
        {
            "src": "/(.*)",
            "dest": "server.js"
        }
    ],
    "static": {
        "headers": [
            {
                "source": "/(.*)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-store"
                    }
                ]
            }
        ]
    }
}
